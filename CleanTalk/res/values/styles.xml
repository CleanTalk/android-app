<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/ButtonTheme</item>
        <item name="android:editTextStyle">@style/EditTextTheme</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/ButtonTheme</item>
        <item name="android:editTextStyle">@style/EditTextTheme</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoginFormContainer" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10pt</item>
    </style>

    <style name="EditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColorHint">#b3e5f4</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tableRowItem">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">9pt</item>
    </style>

</resources>