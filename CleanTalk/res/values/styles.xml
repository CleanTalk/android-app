<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/ButtonTheme</item>
        <item name="android:editTextStyle">@style/EditTextTheme</item>
        <item name="actionBarStyle">@style/ActionBarCompat</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBarCompat</item>
        <item name="android:actionOverflowButtonStyle" tools:targetApi="11">@style/ActionButtonOverflow</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
    </style>

    <style name="AppTheme.NoTitleBar" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10pt</item>
    </style>

    <style name="EditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColorHint">#b3e5f4</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tableRowItem">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tableRowItemLink" parent="tableRowItem">
        <item name="android:background">@drawable/row_item_bg</item>
    </style>

    <style name="tableRowTitle">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ActionBarCompat" parent="@style/Widget.AppCompat.Base.ActionBar">
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/titleStyle</item>
        <item name="titleTextStyle">@style/titleStyle</item>
    </style>

    <style name="titleStyle" parent="@style/TextAppearance.AppCompat.Widget.Base.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ActionButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow</item>
    </style>

    <style name="TextViewNew" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/new_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
        <item name="android:minWidth">18dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">5pt</item>
    </style>

</resources>